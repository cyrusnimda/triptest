{% extends 'JosuTestWebBundle::base.html.twig' %}

{% block body %}
	{% if error %}
	    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form class="form-horizontal" action="{{ path('login') }}" method="post">
		<div class="form-group">
			<label class="col-sm-2 control-label required" for="username">Username:</label>
			<div class="col-sm-10">
				<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label required" for="password">Password:</label>
			<div class="col-sm-10">
				<input class="form-control" type="password" id="password" name="_password" />
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-primary" type="submit">login</button>
			</div>
		</div>

	</form>



{% endblock %}
