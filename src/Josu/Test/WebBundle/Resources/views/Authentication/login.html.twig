{% extends 'JosuTestWebBundle::base.html.twig' %}

{% block body %}
	{% if error %}
	    <div class="alert alert-error text-danger">
	        <strong>Error!</strong> : {{ error }}
	    </div>

	{% endif %}

	<div class="col-sm-6 col-sm-offset-2">
		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}
	</div>

{% endblock %}
